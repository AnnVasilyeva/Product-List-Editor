{
    "env": {
        "jest": true,
        "browser": true,
        "es2021": true
    },
    "extends": "airbnb-base",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "rules": {
        //поддерживает ++
        "no-plusplus": "off",
        "no-param-reassign": "off",
        "class-methods-use-this": "off",

        "no-restricted-syntax": [
            "error",
            "LabeledStatement",
            "WithStatement"
        ]
    }
}
